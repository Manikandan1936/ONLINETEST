@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
   <script src="~/User_Script.js"></script>
    <title>User_Login</title>
</head>
<body>
    <div class="container">
       <form id="user_form">
        <div class="row">

            <div class="col-3"></div>

            <div class="col-6">

                <div style="text-align:center">
                    <h4> USER LOGIN </h4>
                </div><br />

                <div class="row">
                    <div class="col-6">
                        <label style="font-weight: bolder">USER NAME </label>
                    </div>
                    <div class="col-6">
                        <input type="text" id="user_login" class="form-control" /><br />
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label style="font-weight: bolder">EMAIL ID </label>
                    </div>
                    <div class="col-6">
                        <input type="email" id="login_email" class="form-control" /><br />
                    </div>
                </div>

                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <button type="button" id="login" class="btn btn-success">LOGIN </button>
                    </div>
                    <div class="col-3"></div>
                </div>



            </div>




            <div class="col-3"></div>
        </div>
           </form>
    </div>
</body>
</html>
