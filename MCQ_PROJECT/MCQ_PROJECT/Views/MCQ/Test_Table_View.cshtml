@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test_Table_View</title>
      <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <script src="~/JavaScript1.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <a href="~/MCQ/Show_Questions">

                <button type="button" id="question_table" class="btn btn-danger"> QUESSTION TABLES </button>

                    </a>
            </div>

            <div class="col-6">

                <div style="text-align: center">
                    <h4> NEW TEST </h4>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label style="font-weight: bolder">  TEST NAME </label>
                    </div>
                    <div class="col-6">
                        <input type="text" id="test-name" name="test-name" class="form-control" /><br />
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label style="font-weight: bolder">CREATED DATE </label>
                    </div>
                    <div class="col-6">
                        <input type="datetime-local" id="create_date" name="create_date" class="form-control" /><br />
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label style="font-weight: bolder">END DATE </label>
                    </div>
                    <div class="col-6">
                        <input type="datetime-local" id="end_date" name="end_date" class="form-control" /><br />
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label style="font-weight: bolder">DURATION  </label>
                    </div>
                    <div class="col-6">
                       @* <input type="text" id="duration" name="duration" class="form-control"  /><br />*@
                        <input type="text"  id="duration" name="duration" required pattern="[0-9]{2}:[0-9]{2}" value="00:00" title="Write a duration in the format hh:mm">

                    </div>
                </div>

                <div class="row">
                    <div class="col-4"></div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary" id="btn-test-table">SUBMIT </button>
                    </div>
                    <div class="col-4"></div>
                </div>


            </div>
            <div class="col-3"></div>
        </div>
    </div>



    <div class="container">
        <div class="row">
            <div class="col-3"></div>

            <div class="col-6">

                <table id="Test_Table" class="display dataTable cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th>TEST ID ID</th>
                            <th> TEST NAME </th>
                           <th> CREATED DATE </th>
                            <th> END DATE  </th>
                            <th> DURATION </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>

            <div class="col-3"></div>
        </div>
    </div>


</body>
</html>
