}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
     <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <script src="~/JavaScript1.js"></script>
    <title>Show_Questions</title>
</head>
<body>
     <div class="container">
        <div class="row">
            <div class="col-3">

                 <select id="choose_subject" class="form-control">

                   <option selected disabled value=""> SELECT SUBJECT </option>

                </select>

            </div>

            <div class="col-6">

                <table id="Questions_Table" class="display dataTable cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th> SUBJECT ID </th>
                            <th> QUESTIONS ID </th>
                           <th> QUESTIONS </th>
                            <th> CHECK BOX </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table><br />

                <div style="text-align:center">
                <button id="submit-questions" type="button" class="btn btn-primary">Submit</button>
                    </div>
            </div>

            <div class="col-3">

                <select id="select_test" name="select_test" class="form-control">

                    <option selected disabled value=""> SELECT A TEST </option>

                </select>

            </div>
        </div>
    </div>
</body>
</html>
