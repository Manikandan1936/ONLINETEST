@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Subject_Page</title>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
   
    <script src="~/JavaScript1.js"></script>
</head>
<body>
    <div class="container">
        <form id="subject-form">
        <div class="row">
            <div class="col-3">
                 <h4> !! WELCOM ADMIN @User.Identity.Name </h4>
            </div>

            <div class="col-6">

                <h3 style="text-align: center">SUBJECTS </h3><br />

                <div class="row">
                    <div class="col-6">
                        <label style="font-weight:bolder">  ENTER YOUE SUBJECT </label>
                    </div>
                    <div class="col-6">
                        <input type="hidden" id="sub_id" />

                        <input type="text" id="sub" name="sub" class="form-control" />
                    </div>

                </div><br />

                 <div class="row">
                    <div class="col-4">
                         <button type="submit" id="subject" class="btn btn-success"  onclick="Save_Subject();" > SAVE </button>
                    </div>
                    <div class="col-4">

                        <button type="submit" id="update" onclick="Update_Subjects()"; class="btn btn-warning"> UPDATE </button>

                    </div>
                    <div class="col-4">

                        <a  href="~/MCQ/Question_Page">

                         <button type="button" id="add_question"  class="btn btn-danger"> CREATEQUESTIONS </button>
                                
                            </a>
                    </div>
                </div>
               
            </div>


            <div class="col-3"></div>
        </div>
                </form>
    </div><br /><br />

    <div class="container">
        <div class="row">
            <div class="col-3"></div>

            <div class="col-6">

                <table id="Subject_Table" class="display dataTable cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th>SUBJECT ID</th>
                            <th>SUBJECTS</th>
                           <th> CREATED BY </th>
                            <th> EDIT </th>
                            <th> DELETE  </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>

            <div class="col-3"></div>
        </div>
    </div>


</body>
</html>
